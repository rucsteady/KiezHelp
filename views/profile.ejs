<% if (alerts) {%>
    <div style="display: flex; flex-direction: vertical !important;">
        <% alerts.forEach(alert=>{ 
                if(alert.length> 0){%>

            <div class="alert alert-danger" role="alert" style="font-size:14px !important; height: 70px; width: 600px; margin: 0 auto 0 auto; display: block">
                <%=alert%>
            </div>
            <% }}); %>
    </div>
    <% } %>
        <div class="form-container w3-jumbo">
            <h1 class="w3-jumbo w3-animate-top" style="text-align: left;" id="headline">
                <%=user.name.first%>
                    <%=user.name.last%>'s Profile
            </h1>
            <hr class="w3-border-grey" style="margin: auto;" />

            <div style="width: 100vw; position: absolute; left: 10vw; display:flex; flex-direction: horizontal;">

                <%- include('showUserFields',{ user:user }) %>

            </div>
        </div>