<div class="w3-row-padding w3-large ">
    <form class="request-form w3-animate-top" action=<%=submitAction%> method="post">
        <div>
            <label>Name</label> <small>*required</small>
            <input class="w3-input w3-border" name="name" type="text" placeholder="Jane Doe" required>
        </div>
        <div>
            <label>Address</label> <small>*required</small>
            <input class="button w3-button w3-black locate" style="display:inline;" value="Locate">
            <input class="w3-input w3-border w3-block" name="address" type="text" placeholder="eg. Herbert-von-Karajan-StraÃŸe 1, 10785 Berlin" required>
        </div>
        <div>
            <label>Help Genre</label> <small>*required</small>
            <div class="w3-dropdown-hover w3-block">
                <select class="w3-select" name="option" required>
                    <option value="" disabled selected>Choose one or click other</option>
                    <option value="GroceryShopping">Grocery Shopping</option>
                    <option value="Babysitting">Babysitting</option>
                    <option value="DogWalking">Dog walking</option>
                    <option value="RunErrands">Run Errands</option>
                    <option value="FriendlyChat">Friendly Chat</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>


        <div>
            <label>Date</label>
            <input class="w3-block" type="date" name="date">
        </div>
        <div>
            <label>Duration</label>
            <div class="w3-block">
                <input class="w3-third" type="time" id="appt" name="durafrom">
                <p class="w3-third w3-center" style="margin:0;">to</p>
                <input class="w3-third" type="time" id="appt" name="durato">
            </div>
        </div>
        <div>
            <label>Message</label>
            <textarea class="w3-input w3-border" name="message" placeholder="Provide more detail..."></textarea>
        </div>
        <div>
            <input class="button w3-button w3-black w3-block" style="margin:20px 0" type="submit" name="type" value=<%=buttonText%>>
        </div>
    </form>
</div>